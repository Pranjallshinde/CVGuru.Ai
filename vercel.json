{
  "version": 2,
  "builds": [
    {
      "src": "app.py",
      "use": "@vercel/python",
      "config": {
        "maxLambdaSize": "50mb",
        "runtime": "python3.12"  // <-- ADD THIS LINE
      }
    }
  ],
  "functions": {
    "app.py": {
      "runtime": "python3.12",   // <-- CHANGE THIS LINE
      "maxDuration": 30
    }
  },
  "routes": [
    {
      "src": "/(.*)",
      "dest": "app.py"
    }
  ],
  "env": {
    "PYTHONPATH": "/var/task"
  }
}
